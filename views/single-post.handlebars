{{> post-info post }}
{{#if loggedIn}}
<button type="button" class="upvote-btn btn btn-secondary mt-2">Like</button>
{{/if}}
{{> comments post.comments}}
{{#if loggedIn}}
<form class="comment-form mt-3">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-12 col-md-8">
            <textarea class="col-12" id="comment-text" name="comment-body"></textarea>
            <div class="text-center">
                <button type="submit" class="btn btn-warning">Comment</button>
            </div>
        </div>


    </div>
</form>
{{/if}}
   
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}