<div class="row justify-content-center mt-4">
    <section class=" col-sm-12 col-md-10 ">
        <h2>Create New Post</h2>

        <form class="new-post-form">
            <label id="" for="post-title">Title</label>
            <div class="form-floating">
                <input type="text" id="post-title" class="col-6"name="post-title" />
            </div>
            <br>
            <div class="form-floating">
                <label for="post-body"></label>
                <input id="post-body" class="form-control" name="post-body"/>
            </div>
            <button type="submit" class="btn btn-warning mt-2">Post</button>
        </form>
    </section>
</div>

{{#if posts.length}}
<div class="d-flex justify-content-center row mt-3">
    <section class="col-12">
        <h2>Your Posts</h2>
        <ol class="ps-0">
            {{#each posts as |post|}}
            <li id="posts-li" class="">
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
</div>
{{/if}}

<script src="/javascript/add-post.js"></script>